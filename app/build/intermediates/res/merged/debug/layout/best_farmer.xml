<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">
   
 <TextView
    android:id="@+id/area_name"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   
    android:textSize="20sp"
    android:text="Best Farmer"
    android:textColor="#000000" />   
    
 <TextView
                                android:id="@+id/bf_dis_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_span="3"
                                android:background="#888888"
                                android:padding="18dip"
                                android:text=""
                                android:textColor="#000"
                                android:textSize="21sp" 
                                />
    
  <ScrollView 
      android:layout_width="fill_parent"
	  android:layout_height="match_parent">
<TableLayout
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"  android:stretchColumns="*" android:background="#a09f9f">

                      
    					
                        <!-- Row 3 with 2 columns -->
                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:gravity="center_horizontal">

                            <TextView
                                
                                
                                android:background="#b0b0b0"
                                android:gravity="left"
                                android:padding="18dip"
                                android:text="Name"
                                android:textColor="#000000"
                                android:textSize="18sp" />
                     
                            <TextView
                                android:id="@+id/bf_name" 
                                android:text=""
                                android:layout_weight="1" 
                                android:background="#a09f9f"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:padding="18dip" android:gravity="left"/>
                        </TableRow>
                        
                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:gravity="center_horizontal">

                            <TextView
                               
                                
                                android:background="#b0b0b0"
                                android:gravity="left"
                                android:padding="18dip"
                                android:text="Crop"
                                android:textSize="18sp"
                                android:textColor="#000000" />
                     
                            <TextView
                                android:id="@+id/bf_crop" 
                                android:text=""
                                android:layout_weight="1" 
                                android:background="#a09f9f"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:padding="18dip" android:gravity="left"/>
                        </TableRow>
                        
                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:gravity="center_horizontal">

                            <TextView
                                
                                
                                android:background="#b0b0b0"
                                android:gravity="left"
                                android:padding="18dip"
                                android:text="produce"
                                android:textSize="18sp"
                                android:textColor="#000000" />
                     
                            <TextView
                                android:id="@+id/bf_prod" 
                                android:text=""
                                android:layout_weight="1" 
                                android:background="#a09f9f"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:padding="18dip" android:gravity="left"/>
                        </TableRow>
                        
                         <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:gravity="center_horizontal">

                            <TextView
                                
                                
                                android:background="#b0b0b0"
                                android:gravity="left"
                                android:padding="18dip"
                                android:text="Seeds used"
                                android:textSize="18sp"
                                android:textColor="#000000" />
                     
                            <TextView
                                android:id="@+id/bf_seed" 
                                android:text=""
                                android:layout_weight="1" 
                                android:background="#a09f9f"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:padding="18dip" android:gravity="left"/>
                        </TableRow>
                        
                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:gravity="center_horizontal">

                            <TextView
                                
                                
                                android:background="#b0b0b0"
                                android:gravity="left"
                                android:padding="18dip"
                                android:text="Fertilizers"
                                android:textSize="18sp"
                                android:textColor="#000000" />
                     
                            <TextView
                                android:id="@+id/bf_ferti" 
                                android:text=""
                                android:layout_weight="1" 
                                android:background="#a09f9f"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:padding="18dip" android:gravity="left"/>
                        </TableRow>
                        
                        
      </TableLayout>
     </ScrollView>
      </LinearLayout>