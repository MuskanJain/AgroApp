<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">
   
 <TextView
    android:id="@+id/area_name_soil"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   
    android:textSize="20sp"
    android:text=""
    android:textColor="#000000" />   
    
 
    
  <ScrollView 
      android:layout_width="fill_parent"
	  android:layout_height="match_parent">
<TableLayout
            android:id="@+id/soil_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"  android:stretchColumns="*" android:background="#a09f9f">

                      
    					
                        <!-- Row 3 with 2 columns -->
                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:gravity="center_horizontal">

                            <TextView
                                
                                
                                android:background="#888888"
                                android:gravity="left"
                                android:padding="18dip"
                                android:text="Soil Type"
                                android:textColor="#000000"
                                android:textSize="18sp" />
                     
                            <TextView
                                android:id="@+id/bf_name" 
                                android:text="Crops"
                                android:layout_weight="1" 
                                android:background="#888888"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:padding="18dip" android:gravity="left"/>
                        </TableRow>
                        
                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:gravity="center_horizontal">

                            
                        </TableRow>
                        
                              
                        
      </TableLayout>
     </ScrollView>
      </LinearLayout>